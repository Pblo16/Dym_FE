# Strapi Backend Configuration
VITE_STRAPI_URL=http://localhost:1337
VITE_STRAPI_TOKEN=your_strapi_token_here

# Email Service Configuration
# Providers: 'sendgrid' | 'resend' | 'emailjs' | 'nodemailer' | 'mock'
VITE_EMAIL_PROVIDER=mock
VITE_EMAIL_API_KEY=your_email_api_key_here
VITE_EMAIL_FROM=noreply@tuempresa.com
VITE_EMAIL_FROM_NAME="Tu Empresa S.L."

# SMTP Configuration (para nodemailer)
VITE_SMTP_HOST=smtp.gmail.com
VITE_SMTP_PORT=587
VITE_SMTP_SECURE=false
VITE_SMTP_USER=your_email@gmail.com
VITE_SMTP_PASS=your_app_password

